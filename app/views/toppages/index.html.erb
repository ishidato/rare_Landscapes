<% if logged_in? %>
<p id="notice"><%= notice %></p>

<h1>投稿一覧</h1>


  <div class="row">
    <% @posts.each do |post| %>
      <div class="offset-md-3 col-sm-1">
        <img class="rounded me-2 mb-5" src="<%= gravatar_url(post.user, { size: 64 }) %>" alt="">
        <%= link_to post.user.name, user_path(post.user), class: "text-decoration-none" %>
      </div>
      <div class="col-sm-8">
        <div class="p-2">
          <p><img src="<%= post.photo %>" width="300" alt=""></p>
          <p><%= post.content %></p>
          <%= render 'likes/favorite_button', post: post %>
        </div>
      </div>  
      
    <% end %>
    <div class="offset-md-4 col-sm-8">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
  
<% else %>
  <div class="text-center text-black mt-5 mx-5">
    <h1>Welcome！</h1>
  </div>
<% end %>